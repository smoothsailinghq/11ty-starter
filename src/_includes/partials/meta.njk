{%- set absolutePageUrl -%}{{ metadata.url }}{{ page.url | url }}{%- endset -%}

{# General #}
<meta name="description" content="{{ description or metadata.description }}">
<meta name="generator" content="{{ eleventy.generator }}">
<link rel="canonical" href="{{ absolutePageUrl }}">
<meta name="color-scheme" content="dark light">

{# Open Graph #}
<meta property="og:site_name" content="{{ metadata.title }}">
<meta property="og:title" content="{{ title or metadata.title }}">
<meta property="og:description" content="{{ description or metadata.description }}">
<meta property="og:url" content="{{ absolutePageUrl }}">
<meta property="og:locale" content="{{ metadata.language }}">
{% if tags %}
<meta name="twitter:card" content="summary_large_image">
{% else %}
<meta name="twitter:card" content="summary">
{% endif %}
<meta name="twitter:image" content="{{ metadata.url }}{{ image or metadata.image | url }}">
<meta name="twitter:image:alt" content="{{ imageAlt or metadata.imageAlt }}">
<meta property="og:image" content="{{ metadata.url }}{{ image or metadata.image | url }}">
<meta property="og:image:alt" content="{{ imageAlt or metadata.imageAlt }}">

{# Favicon #}
<link rel="icon" type="image/svg+xml" href="{{ '/assets/favicons/favicon.svg' | url }}">
<link rel="alternate icon" href="{{ '/assets/favicons/favicon.ico' | url }}">
<link rel="mask-icon" href="{{ '/assets/favicons/safari-pinned-tab.svg' | url }}" color="#0D3673">
<link rel="apple-touch-icon" sizes="180x180" href="{{ '/assets/favicons/apple-touch-icon.png' | url }}">
<link rel="manifest" href="{{ '/site.webmanifest' | url }}">
<meta name="theme-color" content="#0D3673">

{# Feed #}
<link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
<link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">